{
  "name": "html_writer_tool",
  "description": "This tool can be used to write html files and components in jinja2 format",
  "input_schema": {
    "type": "object",
    "properties": {
      "component_details": {
        "type": "string",
        "description": "The details of the component"
      },
      "style_details": {
        "type": "string",
        "description": "The details of the style"
      },
      "componenet_file_path": {
        "type": "string",
        "description": "The path of the file to write the code to"
      }
    },
    "required": ["component_details", "style_details", "componenet_file_path"]
  }
}
